#include <stdio.h>

#define TAMANHO 6

int main() {
    int vetor[TAMANHO];

    // Leitura do vetor
    printf("Digite 6 números inteiros:\n");
    for(int i = 0; i < TAMANHO; i++) {
        printf("Elemento %d: ", i + 1);
        scanf("%d", &vetor[i]);
    }

    // Impressão do vetor na ordem inversa
    printf("Valores na ordem inversa:\n");
    for(int i = TAMANHO - 1; i >= 0; i--) {
        printf("%d ", vetor[i]);
    }
    printf("\n");

    return 0;
}
